<%-include ("../partials/header")%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add new Blog</h1>
        <div style="width:30%;margin:20px auto">
        <form action="/allblogs" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Blog name " name="blogName" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image Src " name="image" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="description" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">ADD</button>
            </div>
            <a href="/allblogs">See Blogs</a>
        </form>
        </div>
    </div>
   
</div>

<%-include ("../partials/footer")%>

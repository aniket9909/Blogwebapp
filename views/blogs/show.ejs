<%-include ("../partials/header")%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">JoyCamp</p>
            <div class="list-group">
                <li class="list-group-item active">item 1</li>
                <li class="list-group-item">item 2</li>
                <li class="list-group-item">item 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail" style="padding: 0;">
                <img id="img" style="width: 100%;" class="image-responsive" src="<%=blog.image%>" alt="" srcset="">
                <div class="caption-full" style="padding: 15px;">
                    <h4 class="pull-right">$9</h4>
                    <h3> <a href=""><%=blog.name%></a></h3>
                    <p style="padding: 15px;"><%=blog.description%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <p>
                        <a class="btn btn-success" href="/blogs/<%= blog._id %>/comment/new ">Add comment</a>
                    </p>
                </div>
                <hr>
                <% blog.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong>
                                <%= comment.author %>
                            </strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
                <a class="btn btn-danger" href="/AllBlogs">Go Back</a>

            </div>
            
        </div>
    </div>
</div>




<%-include ("../partials/footer")%>
